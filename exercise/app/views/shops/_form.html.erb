<%= form_for @shop do |f| %>

	<p>
		<%= f.label :chain %>:
		<%= f.text_field :chain %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.label :name %>:
		<%= f.text_field :name %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.label :latitude %>:
		<%= f.number_field(:latitude, in: -90..90, step: 10.0 ** -6) %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.label :longitude %>:
		<%= f.number_field(:longitude, in: -180..180, step: 10.0 ** -6) %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.label :address %>:
		<%= f.text_field :address %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.label :city %>:
		<%= f.text_field :city %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.label :zip %>:
		<%= f.number_field(:zip, in: 1000..99999, step: 1) %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.label :phone %>:
		<%= f.text_field :phone %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.label :country_code %>:
		<%= f.text_field :country_code %>
		<div class = "error"><%= @error.pop() %></div>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<footer>
	<%= link_to 'Back to home', home_index_path %>
