<h1>Edit current shop (ID <%= @shop.id %>)</h1>

<%= form_for @shop do |f| %>
	<p>
		<%= f.label :chain %></br>
		<%= f.text_field :chain %></br>
	</p>
	<p>
		<%= f.label :name %></br>
		<%= f.text_field :name %></br>
	</p>
	<p>
		<%= f.label :latitude %></br>
		<%= f.number_field(:latitude, in: -90..90, step: 1.0 * 10 ** -6) %></br>
	</p>
	<p>
		<%= f.label :longitude %></br>
		<%= f.number_field(:longitude, in: -180..180, step: 1.0 * 10 ** -6) %></br>
	</p>
	<p>
		<%= f.label :address %></br>
		<%= f.text_field :address %></br>
	</p>
	<p>
		<%= f.label :city %></br>
		<%= f.text_field :city %></br>
	</p>
	<p>
		<%= f.label :zip %></br>
		<%= f.number_field(:zip, in: 1000..99999, step: 1) %></br>
	</p>
	<p>
		<%= f.label :phone %></br>
		<%= f.text_field :phone %></br>
	</p>
	<p>
		<%= f.label :country_code %></br>
		<%= f.text_field :country_code %></br>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>

<% link_to 'Back to homepage',  home_index_path %>

